{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["dom", "esnext", "es2015", "es2016", "es2017"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "target": "es2015",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules/*", "public/*", "gatsby^*"]
}
